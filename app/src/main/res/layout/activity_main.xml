<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activities.MainActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/header_background"
                android:padding="20dp"
                android:elevation="4dp">

                <!-- Saludo -->
                <TextView
                    android:id="@+id/tvUserGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="춰Buenos d칤as, Usuario!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="4dp" />

                <!-- Mes actual -->
                <TextView
                    android:id="@+id/tvCurrentMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diciembre 2024"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0" />

            </LinearLayout>

            <!-- Alerta de presupuesto -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFEBEE"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvAlertMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="丘멆잺 Has usado el 85% de tu presupuesto mensual"
                    android:textSize="14sp"
                    android:textColor="#C62828"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <!-- Resumen Financiero -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumen del Mes"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="16dp" />

                    <!-- Ingresos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="游눯 Ingresos"
                            android:textSize="16sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/tvIncome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />
                    </LinearLayout>

                    <!-- Gastos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="游눶 Gastos"
                            android:textSize="16sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/tvExpenses"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#F44336" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginVertical="8dp" />

                    <!-- Balance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="游눳 Balance"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:id="@+id/tvBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Presupuesto -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游늵 Progreso del Presupuesto"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="16dp" />

                    <!-- Barra de progreso -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <ProgressBar
                            android:id="@+id/progressBudget"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:progress="0"
                            android:max="100"
                            android:progressTint="#4CAF50"
                            android:progressBackgroundTint="#E0E0E0" />

                        <TextView
                            android:id="@+id/tvProgressPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <!-- Presupuesto total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Presupuesto Mensual"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/tvBudget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />
                    </LinearLayout>

                    <!-- Presupuesto restante -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Disponible"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/tvBudgetRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />
                    </LinearLayout>

                    <!-- D칤as restantes -->
                    <TextView
                        android:id="@+id/tvDaysRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 d칤as restantes"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Accesos R치pidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accesos R치pidos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="80dp">

                <!-- Card Transacciones -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTransactions"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游닇"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transacciones"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card Estad칤sticas -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardStatistics"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="游늵"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estad칤sticas"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card Configuraci칩n -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSettings"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="丘뙖잺"
                            android:textSize="32sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configuraci칩n"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bot칩n flotante para agregar transacci칩n -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:contentDescription="Agregar transacci칩n"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="#4CAF50"
        app:tint="#FFFFFF"
        app:elevation="6dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.examen_001">

    <!-- Permiso para internet (necesario para la API de tasas de cambio) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Examen_001"
        android:usesCleartextTraffic="true">


        <!-- Activity Principal (Dashboard) -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />


        <!-- Activity de Configuración Inicial -->
        <activity
            android:name=".activities.InitialConfigActivity"
            android:exported="true"
            android:theme="@style/Theme.Examen_001">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Activity de Agregar/Editar Transacción -->
        <activity
            android:name=".activities.AddTransactionActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <!-- Activity de Lista de Transacciones -->
        <activity
            android:name=".activities.TransactionsListActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />

    </application>

</manifest>